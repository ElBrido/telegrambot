<div class="dashboard-page">
    <div class="container">
        <div class="dashboard-header">
            <h1>Welcome, <%= user.firstName %>!</h1>
            <p>Manage your servers and orders from your dashboard</p>
        </div>
        
        <div class="dashboard-stats">
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-server"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-value"><%= servers.length %></div>
                    <div class="stat-label">Active Servers</div>
                </div>
            </div>
            
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-shopping-cart"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-value"><%= orders.length %></div>
                    <div class="stat-label">Total Orders</div>
                </div>
            </div>
            
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-bolt"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-value">99.9%</div>
                    <div class="stat-label">Uptime</div>
                </div>
            </div>
        </div>
        
        <div class="dashboard-content">
            <div class="content-section">
                <div class="section-header">
                    <h2>Your Servers</h2>
                    <a href="/plans" class="btn btn-primary">
                        <i class="fas fa-plus"></i> New Server
                    </a>
                </div>
                
                <% if (servers.length > 0) { %>
                    <div class="servers-grid">
                        <% servers.forEach(server => { %>
                            <div class="server-card">
                                <div class="server-header">
                                    <h3><%= server.server_name || `Server #${server.id}` %></h3>
                                    <span class="server-status <%= server.status %>">
                                        <%= server.status %>
                                    </span>
                                </div>
                                <div class="server-specs">
                                    <div class="spec"><i class="fas fa-microchip"></i> <%= server.cpu %> CPU</div>
                                    <div class="spec"><i class="fas fa-memory"></i> <%= (server.ram/1024).toFixed(0) %> GB RAM</div>
                                    <div class="spec"><i class="fas fa-hdd"></i> <%= server.disk %> GB</div>
                                    <div class="spec"><i class="fas fa-map-marker-alt"></i> <%= server.node_location %></div>
                                </div>
                                <a href="/servers/<%= server.id %>" class="btn btn-outline-primary btn-block">
                                    Manage Server
                                </a>
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <div class="empty-state">
                        <i class="fas fa-server"></i>
                        <h3>No servers yet</h3>
                        <p>Get started by ordering your first server</p>
                        <a href="/plans" class="btn btn-primary">Browse Plans</a>
                    </div>
                <% } %>
            </div>
            
            <div class="content-section">
                <div class="section-header">
                    <h2>Recent Orders</h2>
                    <a href="/dashboard/orders" class="text-link">View All</a>
                </div>
                
                <% if (orders.length > 0) { %>
                    <div class="orders-list">
                        <% orders.forEach(order => { %>
                            <div class="order-item">
                                <div class="order-info">
                                    <div class="order-id">#<%= order.id %></div>
                                    <div class="order-details">
                                        <%= order.plan_name || 'Custom Plan' %> - <%= order.node_location %>
                                    </div>
                                </div>
                                <div class="order-meta">
                                    <span class="order-price">$<%= parseFloat(order.price).toFixed(2) %></span>
                                    <span class="order-status <%= order.status %>"><%= order.status %></span>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <div class="empty-state-small">
                        <p>No orders yet</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

