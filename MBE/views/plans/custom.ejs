    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem 0;
    border-top: 2px solid #e5e7eb;
    margin-bottom: 1.5rem;
    font-weight: 700;
    font-size: 1.25rem;
}

