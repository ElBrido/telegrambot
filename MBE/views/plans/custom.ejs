<div class="custom-plan-page">
    <section class="page-header">
        <div class="container">
            <h1 class="page-title">Build Your Custom Plan</h1>
            <p class="page-subtitle">Configure your perfect hosting solution with our interactive plan builder</p>
        </div>
    </section>
    
    <section class="builder-section">
        <div class="container">
            <div class="builder-grid">
                <div class="builder-config">
                    <h2 class="section-title">Configure Resources</h2>
                    
                    <div class="config-group">
                        <label class="config-label">
                            <span class="label-text">CPU Cores</span>
                            <span class="label-value" id="cpuValue">2</span>
                        </label>
                        <input type="range" id="cpuSlider" min="1" max="16" value="2" step="1" class="slider">
                        <div class="slider-marks">
                            <span>1</span>
                            <span>4</span>
                            <span>8</span>
                            <span>16</span>
                        </div>
                    </div>
                    
                    <div class="config-group">
                        <label class="config-label">
                            <span class="label-text">RAM (GB)</span>
                            <span class="label-value" id="ramValue">4</span>
                        </label>
                        <input type="range" id="ramSlider" min="1" max="64" value="4" step="1" class="slider">
                        <div class="slider-marks">
                            <span>1</span>
                            <span>16</span>
                            <span>32</span>
                            <span>64</span>
                        </div>
                    </div>
                    
                    <div class="config-group">
                        <label class="config-label">
                            <span class="label-text">NVMe SSD (GB)</span>
                            <span class="label-value" id="diskValue">40</span>
                        </label>
                        <input type="range" id="diskSlider" min="10" max="500" value="40" step="10" class="slider">
                        <div class="slider-marks">
                            <span>10</span>
                            <span>100</span>
                            <span>250</span>
                            <span>500</span>
                        </div>
                    </div>
                    
                    <div class="config-group">
                        <label class="config-label">
                            <span class="label-text">Databases</span>
                            <span class="label-value" id="databasesValue">2</span>
                        </label>
                        <input type="range" id="databasesSlider" min="0" max="20" value="2" step="1" class="slider">
                        <div class="slider-marks">
                            <span>0</span>
                            <span>5</span>
                            <span>10</span>
                            <span>20</span>
                        </div>
                    </div>
                    
                    <div class="config-group">
                        <label class="config-label">
                            <span class="label-text">Backups</span>
                            <span class="label-value" id="backupsValue">5</span>
                        </label>
                        <input type="range" id="backupsSlider" min="0" max="50" value="5" step="1" class="slider">
                        <div class="slider-marks">
                            <span>0</span>
                            <span>10</span>
                            <span>25</span>
                            <span>50</span>
                        </div>
                    </div>
                    
                    <div class="config-group">
                        <label class="config-label">
                            <span class="label-text">Select Node Location</span>
                        </label>
                        <select id="nodeLocation" class="form-select">
                            <% nodes.forEach(node => { %>
                                <option value="<%= node.name %>" <%= node.disabled ? 'disabled' : '' %>>
                                    <%= node.name %> - <%= node.location %>
                                </option>
                            <% }); %>
                        </select>
                    </div>
                </div>
                
                <div class="builder-summary">
                    <div class="summary-card">
                        <h3 class="summary-title">Your Custom Plan</h3>
                        
                        <div class="summary-specs">
                            <div class="spec-item">
                                <i class="fas fa-microchip"></i>
                                <span><span id="summCpu">2</span> CPU Cores</span>
                            </div>
                            <div class="spec-item">
                                <i class="fas fa-memory"></i>
                                <span><span id="summRam">4</span> GB RAM</span>
                            </div>
                            <div class="spec-item">
                                <i class="fas fa-hdd"></i>
                                <span><span id="summDisk">40</span> GB NVMe SSD</span>
                            </div>
                            <div class="spec-item">
                                <i class="fas fa-database"></i>
                                <span><span id="summDatabases">2</span> Databases</span>
                            </div>
                            <div class="spec-item">
                                <i class="fas fa-cloud-upload-alt"></i>
                                <span><span id="summBackups">5</span> Backups</span>
                            </div>
                            <div class="spec-item">
                                <i class="fas fa-map-marker-alt"></i>
                                <span id="summLocation">Mexico</span>
                            </div>
                        </div>
                        
                        <div class="price-breakdown">
                            <h4>Price Breakdown</h4>
                            <div class="breakdown-item">
                                <span>CPU:</span>
                                <span id="priceCpu">$0.00</span>
                            </div>
                            <div class="breakdown-item">
                                <span>RAM:</span>
                                <span id="priceRam">$0.00</span>
                            </div>
                            <div class="breakdown-item">
                                <span>Disk:</span>
                                <span id="priceDisk">$0.00</span>
                            </div>
                            <div class="breakdown-item">
                                <span>Databases:</span>
                                <span id="priceDatabases">$0.00</span>
                            </div>
                            <div class="breakdown-item">
                                <span>Backups:</span>
                                <span id="priceBackups">$0.00</span>
                            </div>
                        </div>
                        
                        <div class="total-price">
                            <span>Monthly Total:</span>
                            <span class="price-amount" id="totalPrice">$0.00</span>
                        </div>
                        
                        <button id="orderCustomPlan" class="btn btn-primary btn-block btn-lg">
                            <i class="fas fa-shopping-cart"></i> Order Now
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<style>
