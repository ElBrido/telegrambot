    .builder-grid {
        grid-template-columns: 1fr;
    }
    
    .builder-summary {
        position: static;
    }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const cpuSlider = document.getElementById('cpuSlider');
    const ramSlider = document.getElementById('ramSlider');
    const diskSlider = document.getElementById('diskSlider');
    const databasesSlider = document.getElementById('databasesSlider');
    const backupsSlider = document.getElementById('backupsSlider');
    const nodeLocation = document.getElementById('nodeLocation');
    const orderBtn = document.getElementById('orderCustomPlan');
    
    function updateValues() {
        const cpu = parseInt(cpuSlider.value);
        const ram = parseInt(ramSlider.value);
        const disk = parseInt(diskSlider.value);
        const databases = parseInt(databasesSlider.value);
        const backups = parseInt(backupsSlider.value);
        
        // Update display values
        document.getElementById('cpuValue').textContent = cpu;
        document.getElementById('ramValue').textContent = ram;
        document.getElementById('diskValue').textContent = disk;
        document.getElementById('databasesValue').textContent = databases;
        document.getElementById('backupsValue').textContent = backups;
        
        document.getElementById('summCpu').textContent = cpu;
        document.getElementById('summRam').textContent = ram;
        document.getElementById('summDisk').textContent = disk;
        document.getElementById('summDatabases').textContent = databases;
        document.getElementById('summBackups').textContent = backups;
        document.getElementById('summLocation').textContent = nodeLocation.value;
        
        // Calculate prices
        const cpuPrice = cpu * 2.5;
        const ramPrice = ram * 3.0;
        const diskPrice = (disk / 10) * 0.5;
        const databasePrice = databases * 2.0;
        const backupPrice = backups * 1.0;
        const total = Math.max(cpuPrice + ramPrice + diskPrice + databasePrice + backupPrice, 3.99);
        
        document.getElementById('priceCpu').textContent = `$${cpuPrice.toFixed(2)}`;
        document.getElementById('priceRam').textContent = `$${ramPrice.toFixed(2)}`;
        document.getElementById('priceDisk').textContent = `$${diskPrice.toFixed(2)}`;
        document.getElementById('priceDatabases').textContent = `$${databasePrice.toFixed(2)}`;
        document.getElementById('priceBackups').textContent = `$${backupPrice.toFixed(2)}`;
        document.getElementById('totalPrice').textContent = `$${total.toFixed(2)}`;
    }
    
    cpuSlider.addEventListener('input', updateValues);
    ramSlider.addEventListener('input', updateValues);
    diskSlider.addEventListener('input', updateValues);
    databasesSlider.addEventListener('input', updateValues);
    backupsSlider.addEventListener('input', updateValues);
    nodeLocation.addEventListener('change', updateValues);
    
    orderBtn.addEventListener('click', async function() {
        const cpu = parseInt(cpuSlider.value);
        const ram = parseInt(ramSlider.value) * 1024; // Convert to MB
        const disk = parseInt(diskSlider.value);
        const databases = parseInt(databasesSlider.value);
        const backups = parseInt(backupsSlider.value);
        const location = nodeLocation.value;
        const price = parseFloat(document.getElementById('totalPrice').textContent.replace('$', ''));
        
        try {
            const response = await fetch('/orders/create', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    planId: null,
                    nodeLocation: location,
                    cpu,
                    ram,
                    disk,
                    databases,
                    backups,
                    price
                })
            });
            
            const data = await response.json();
            
            if (data.success) {
                window.location.href = `/payment/checkout/${data.orderId}`;
            } else {
                showNotification('Error creating order. Please try again.', 'error');
            }
        } catch (err) {
            console.error(err);
            showNotification('Error creating order. Please try again.', 'error');
        }
    });
    
    // Initialize
    updateValues();
});
</script>
